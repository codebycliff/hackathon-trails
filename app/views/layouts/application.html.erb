<!DOCTYPE html>
<html>
  <head>
    <title>HackathonTrails</title>
    <%= csrf_meta_tags %>

  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
  <link href="https://pingendo.com/assets/bootstrap/bootstrap-4.0.0-alpha.5.css" rel="stylesheet" type="text/css">


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="py-5">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <h1 class="m-0 p-0">
              <i class="d-block mx-auto fa fa-map-signs pull-left"></i> INHF
            </h1>
          </div>
        </div>
      </div>
    </div>
    <div class="m-0 p-0">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <ul class="nav nav-pills">
              <li class="nav-item">
                <%= link_to 'Routes', routes_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'Trails', trails_path %>
              </li>
              <li class="nav-item">
                <%= link_to 'Transits', transits_path %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>
